{
	"name": "spencer",
	"version": "1.0.0",
	"description": "Spencer is a discord bot developed by Salvage_Dev.",
	"main": "dist/src/index.js",
	"scripts": {
		"dev": "yarn analyze && ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
		"lint": "prettier --write .",
		"build": "tsc --diagnostics",
		"start": "del-cli ./dist && yarn build && node .",
		"update": "n latest && git pull && pm2 reload Spencer --update-env && pm2 logs Spencer",
		"analyze": "ts-node ./src/analyzers/Analyze.ts",
		"doctor": "doctor",
		"sdk": "yarn pnpify --sdk",
		"gbump": "yarn bump && yarn sdk && git-go 'chore(Deps): bump deps'"
	},
	"license": "Creative Commons",
	"dependencies": {
		"@top-gg/sdk": "^3.0.4",
		"bufferutil": "^4.0.2",
		"cleverbot-free": "^1.0.5",
		"consola": "^2.15.0",
		"discord.js": "^12.5.1",
		"erlpack": "^0.1.3",
		"express": "^4.17.1",
		"glob": "^7.1.6",
		"imageapi.js": "^1.2.4",
		"mongoose": "^5.11.8",
		"ms": "^2.1.3",
		"node-fetch": "^2.6.1",
		"tslib": "^2.0.3",
		"utf-8-validate": "^5.0.3",
		"yn": "^4.0.0",
		"zlib-sync": "^0.1.7"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-angular": "^11.0.0",
		"@types/express": "^4.17.9",
		"@types/glob": "^7.1.3",
		"@types/mongoose": "^5.10.3",
		"@types/ms": "^0.7.31",
		"@types/node": "^14.14.14",
		"@types/node-fetch": "^2.5.7",
		"@yarnpkg/doctor": "^2.1.3",
		"@yarnpkg/pnpify": "^2.4.0",
		"del-cli": "^3.0.1",
		"git-go": "^1.0.3",
		"husky": "^4.3.6",
		"lint-staged": "^10.5.3",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.1.3"
	},
	"lint-staged": {
		"*{.js,.ts,.json,.d.ts,.md,.yml,.yaml}": "prettier --write"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"scope-case": [
				2,
				"always",
				"pascal-case"
			],
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"feat",
					"fix",
					"revert",
					"style",
					"test",
					"deps",
					"docs",
					"ci",
					"test"
				]
			]
		}
	}
}
